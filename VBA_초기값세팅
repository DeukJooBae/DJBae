Public rng_type as string
Public rng_sex as string
Public rng_age as string
Public rng_nabgi as string

public sub 초기값세팅()
dim rng as range

set rng =application.inputbox(prompt:="상품종류입력 칸 선택하세요", Title:=range_type, Type:=8)
rng_type = rng.Address


set rng =application.inputbox(prompt:="성별 칸 선택하세요", Title:=range_sex, Type:=8)
rng_sex = rng.Address

set rng =application.inputbox(prompt:="가입연령 칸 선택하세요", Title:=range_age, Type:=8)
rng_age = rng.Address


set rng =application.inputbox(prompt:="납입기간 칸 선택하세요", Title:=range_nabgi, Type:=8)
rng_nabgi = rng.Address

